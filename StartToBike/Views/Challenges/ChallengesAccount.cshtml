@model StartToBike.Models.Account

@{
    ViewBag.Title = "ChallengesAccount";
}

<h2>ChallengesAccount</h2>

<p style="color: red; font-size: large;">@ViewBag.ErrorMessage</p>

<p>
    @Html.ActionLink("Create Challenge", "FriendsToChallenge", "Accounts")
</p>

<div>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Challenge.FirstOrDefault().ChallengeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Challenge.FirstOrDefault().StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Challenge.FirstOrDefault().Task)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Challenge.FirstOrDefault().Reward)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Challenge.FirstOrDefault().Status)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.Challenge)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ChallengeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Task)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Reward)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.ChallengeId })

                    @Html.ActionLink("Challenge Completed", "ChallengeCompleted", new { id = item.ChallengeId })
                </td>
            </tr>
        }



    </table>

</div>