@model IEnumerable<StartToBike.Models.Training>

@{
    ViewBag.Title = "Catalog";
}

<h2>Catalog</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TrainingLevel)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrainingLevel)
            </td>
            <td>
                @Html.ActionLink("Training Deelnemen", "JoinTraining", new { id = item.TrainingId })
            </td>
        </tr>
    }

</table>

<div>
    @Html.ActionLink("Go Back", "Index")
</div>
