@model StartToBike.ViewModels.AccountFriends

@{
    ViewBag.Title = "FriendsAccount";
}

<h2>Friends</h2>

<p style="color: red; font-size: large;">@ViewBag.ErrorMessage</p>

<p>
    @Html.ActionLink("Add Friend", "Create", "Friends")
</p>

<div>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Friends.FirstOrDefault().UserName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.Friends)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.AccountId })

                    @Html.ActionLink("Remove Friend", "RemoveFriend", new { id = item.AccountId })
                </td>
            </tr>
        }



    </table>

</div>